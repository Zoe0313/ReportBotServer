{
   "blocks": [
      {
         "type": "header",
         "text": {
            "type": "plain_text",
            "text": "Date time setting for one-time notification"
         }
      },
      {
         "block_id": "repeatConfig.date",
         "type": "input",
         "element": {
            "type": "datepicker",
            "placeholder": {
               "type": "plain_text",
               "text": "Select a date",
               "emoji": true
            },
            "action_id": "action_date"
         },
         "label": {
            "type": "plain_text",
            "text": ":date: Select a date for your notification",
            "emoji": true
         }
      },
      {
         "block_id": "repeatConfig.time",
         "type": "input",
         "label": {
            "type": "plain_text",
            "text": ":clock2: Select a time for your notificatoin",
            "emoji": true
         },
         "hint": {
            "type": "plain_text",
            "text": "You can choose a time or input a specific time directly, e.g. 14:25"
         },
         "element": {
            "type": "timepicker",
            "initial_time": "08:00",
            "placeholder": {
               "type": "plain_text",
               "text": "Select time for daily notification",
               "emoji": true
            },
            "action_id": "action_time"
         }
      }
   ]
}