{
   "blocks": [
      {
         "type": "divider"
      },
      {
         "type": "header",
         "text": {
            "type": "plain_text",
            "text": "Step 2: Set up the reccurence"
         }
      },
      {
         "type": "input",
         "block_id": "block_start_date",
         "label": {
            "type": "plain_text",
            "text": ":arrow_forward: Start day",
            "emoji": true
         },
         "element": {
            "type": "datepicker",
            "initial_date": "2021-01-01",
            "placeholder": {
               "type": "plain_text",
               "text": "Select a date",
               "emoji": true
            },
            "action_id": "action_start_date"
         }
      },
      {
         "type": "input",
         "block_id": "block_end_date",
         "label": {
            "type": "plain_text",
            "text": ":black_square_for_stop: End day",
            "emoji": true
         },
         "element": {
            "type": "datepicker",
            "initial_date": "2021-12-31",
            "placeholder": {
               "type": "plain_text",
               "text": "Select a date",
               "emoji": true
            },
            "action_id": "action_end_date"
         }
      },
      {
         "type": "input",
         "block_id": "block_repeat_type",
         "label": {
            "type": "plain_text",
            "text": ":repeat: Select a repeat time",
            "emoji": true
         },
         "dispatch_action": true,
         "element": {
            "type": "static_select",
            "action_id": "action_repeat_type",
            "placeholder": {
               "type": "plain_text",
               "text": "Report type",
               "emoji": true
            },
            "options": [
               {
                  "text": {
                     "type": "plain_text",
                     "text": "Does not repeat",
                     "emoji": true
                  },
                  "value": "not_repeat"
               },
               {
                  "text": {
                     "type": "plain_text",
                     "text": "Repeat hourly",
                     "emoji": true
                  },
                  "value": "hourly"
               },
               {
                  "text": {
                     "type": "plain_text",
                     "text": "Repeat daily",
                     "emoji": true
                  },
                  "value": "daily"
               },
               {
                  "text": {
                     "type": "plain_text",
                     "text": "Repeat weekly",
                     "emoji": true
                  },
                  "value": "weekly"
               },
               {
                  "text": {
                     "type": "plain_text",
                     "text": "Repeat monthly",
                     "emoji": true
                  },
                  "value": "monthly"
               },
               {
                  "text": {
                     "type": "plain_text",
                     "text": "Cron Expression",
                     "emoji": true
                  },
                  "value": "cron_expression"
               }
            ]
         }
      }
   ]
}