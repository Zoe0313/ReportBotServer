{
	"blocks": [
		{
			"type": "divider"
		},
		{
			"type": "header",
			"text": {
				"type": "plain_text",
				"text": "Step 1: Configuration for your new report :relaxed:"
			}
		},
		{
			"type": "input",
			"block_id": "block_title",
			"element": {
				"type": "plain_text_input",
				"action_id": "action_title"
			},
			"label": {
				"type": "plain_text",
				"text": ":one: Title",
				"emoji": true
			}
		},
		{
			"type": "input",
			"block_id": "block_conversation",
			"label": {
				"type": "plain_text",
				"text": ":two: Select multiple conversations for new report"
			},
			"element": {
				"type": "multi_conversations_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Select conversations",
					"emoji": true
				},
				"filter": {
					"exclude_external_shared_channels": true,
					"exclude_bot_users": true
				},
				"action_id": "action_conversation"
			}
		},
		{
			"type": "input",
			"block_id": "block_report_users",
			"element": {
				"type": "multi_users_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Select users",
					"emoji": true
				},
				"action_id": "action_report_users"
			},
			"label": {
				"type": "plain_text",
				"text": ":three: Select users you want to notify in the selected channels",
				"emoji": true
			}
		},
		{
			"type": "input",
			"block_id": "block_report_type",
			"label": {
				"type": "plain_text",
				"text": ":four: Select a report type"
			},
			"dispatch_action": true,
			"element": {
				"type": "static_select",
				"action_id": "action_report_type",
				"placeholder": {
					"type": "plain_text",
					"text": "Report type",
					"emoji": true
				},
				"options": [
					{
						"text": {
							"type": "plain_text",
							"text": "Bugzilla",
							"emoji": true
						},
						"value": "bugzilla"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "Perforce",
							"emoji": true
						},
						"value": "perforce"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "SVS",
							"emoji": true
						},
						"value": "svs"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "FastSVS",
							"emoji": true
						},
						"value": "fastsvs"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "Text",
							"emoji": true
						},
						"value": "text"
					},
					{
						"text": {
							"type": "plain_text",
							"text": "Customized report",
							"emoji": true
						},
						"value": "customized"
					}
				]
			}
		}
	]
}