                  "confirm": {
                     "type": "plain_text",
                     "text": "Confirm"
                  },
                  "deny": {
                     "type": "plain_text",
                     "text": "Close"
                  }
               }
            },
            {
               "type": "button",
               "text": {
                  "type": "plain_text",
                  "emoji": true,
                  "text": ":black_square_for_stop: Disable"
               },
               "value": "DISABLED",
               "action_id": "action_change_report_status",
