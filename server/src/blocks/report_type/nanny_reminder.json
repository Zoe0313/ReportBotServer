				"type": "multi_conversations_select",
				"placeholder": {
					"type": "plain_text",
					"text": "Add someone into the nanny list",
					"emoji": true
				},
				"filter": {
					"include": [
						"im"
					],
					"exclude_external_shared_channels": true,
					"exclude_bot_users": true
				},
				"action_id": "action_pick_nanny_assignee"
			}
		},
		{
			"type": "section",
			"block_id": "previewNannyRosterButton",
