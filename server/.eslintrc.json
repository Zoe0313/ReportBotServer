{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["**/*.json"],
    "rules": {
        "space-before-function-paren": ["off"],
        "no-case-declarations": ["off"],
        "eol-last": ["off"],
        "no-unused-vars": ["warn"],
        "max-len": ["error", { "code": 100, "ignoreTemplateLiterals": true, "ignoreRegExpLiterals": true }],
        "eqeqeq": ["error", "smart"],
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "indent": ["error", 3, { "SwitchCase": 1 }]
    }
}
